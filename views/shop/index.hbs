{{# each products}} 
  <div class="row">
    {{# each this }}

      <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ this.productPath }}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{ this.productName }}</h3>
        <p class="description">{{ this.productDescription }}</p>
        <div class="clearfix">
            <div class="price pull-left">#{{ this.productPrice }}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add To Cart</a>
        </div>
      </div>
    </div>
  </div>
    {{/each}}
    
</div>
  
{{/each}}
